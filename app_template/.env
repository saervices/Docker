######################################################################
# --- APP --- CONTAINER BASICS
######################################################################

IMAGE=your-image:latest                                                                                                                                         # OCI image reference pulled for the application
APP_NAME=your-app                                                                                                                                               # Container name, hostname, and prefix for proxy labels
APP_UID=1000                                                                                                                                                    # UID used inside the container (match with ownership of mounted files)
APP_GID=1000                                                                                                                                                    # GID used inside the container (match with ownership of mounted files)

###################################
# TRAEFIK
###################################
TRAEFIK_HOST=Host(`app.example.com`)                                                                                                                            # Router rule: wrap with Host(), HostRegexp(), etc. (no surrounding quotes needed)
TRAEFIK_PORT=80                                                                                                                                                 # Internal container port the proxy should connect to

######################################################################
# --- APP --- FILESYSTEM & SECRETS
######################################################################

APP_PASSWORD_PATH=./secrets                                                                                                                                     # Host path where secrets are stored (use absolute path in production)
APP_PASSWORD_FILENAME=APP_PASSWORD                                                                                                                              # Secret filename (e.g., app_password)
APP_PASSWORD_FILE=/run/secrets/app_password                                                                                                                     # In-container path where the secret is mounted (referenced by the app)

######################################################################
# --- APP --- SECURITY PROFILES
######################################################################

SECCOMP_PROFILE=/etc/docker/seccomp.json                                                                                                                        # Hardened seccomp profile; set to unconfined only for debugging
APPARMOR_PROFILE=docker-default                                                                                                                                 # AppArmor profile to enforce on compatible hosts (set to unconfined when unsupported)

######################################################################
# --- APP --- RESOURCE LIMITS
######################################################################

MEM_LIMIT=512m                                                                                                                                                  # Memory ceiling for the container (increase after observing consumption)
CPU_LIMIT=1.0                                                                                                                                                   # CPU quota (1.0 = one full core); raise only when needed
PIDS_LIMIT=128                                                                                                                                                  # Maximum number of processes/threads inside the container
SHM_SIZE=64m                                                                                                                                                    # Size of the /dev/shm tmpfs (increase for Chromium, video processing, etc.)

######################################################################
# --- APP --- ENVIRONMENT VARIABLES
######################################################################

ENV_VAR_EXAMPLE=value                                                                                                                                           # Example custom environment variable; extend with real configuration keys

