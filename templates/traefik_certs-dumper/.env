######################################################################
# --- TRAEFIK_CERTS_DUMPER --- CONTAINER BASICS
######################################################################

TRAEFIK_CERTS_DUMPER_APP_NAME=certs-dumper                                                                                                                      # Container name, hostname, and prefix for proxy labels
TRAEFIK_CERTS_DUMPER_APP_UID=1000                                                                                                                               # UID used inside the container (match with ownership of mounted files)
TRAEFIK_CERTS_DUMPER_APP_GID=1000                                                                                                                               # GID used inside the container (match with ownership of mounted files)

######################################################################
# --- TRAEFIK_CERTS_DUMPER --- SECURITY PROFILES
######################################################################

TRAEFIK_CERTS_DUMPER_APPARMOR_PROFILE=docker-default                                                                                                            # AppArmor profile to enforce on compatible hosts (set to unconfined when unsupported)

######################################################################
# --- TRAEFIK_CERTS_DUMPER --- RESOURCE LIMITS
######################################################################

TRAEFIK_CERTS_DUMPER_MEM_LIMIT=512m                                                                                                                             # Memory ceiling for the container (increase after observing consumption)
TRAEFIK_CERTS_DUMPER_CPU_LIMIT=1.0                                                                                                                              # CPU quota (1.0 = one full core); raise only when needed
TRAEFIK_CERTS_DUMPER_PIDS_LIMIT=128                                                                                                                             # Maximum number of processes/threads inside the container
TRAEFIK_CERTS_DUMPER_SHM_SIZE=64m                                                                                                                               # Size of the /dev/shm tmpfs (increase for Chromium, video processing, etc.)